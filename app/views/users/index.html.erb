<% if !flash[:notice].blank? %>
  <div class = "alert alert-info">
    <ul>
      <li> <%= flash[:notice] %> </li>
    </ul>
  </div>
<% end %>

<br />
<%= link_to "New User", new_user_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Download Link</th>
    <th> </th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>

    <tr>
      <td><%= user.name %></td>
      <td><%= link_to "Download Resume", url_for(user.avatar) %></td>
      <td><%= button_to "Delete",  user, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{user.name}?" %></td>
    </tr>

  <% end %>
  </tbody>

</table>