<div class="form-login" >
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { style: "width: 100%; padding: 15px; margin: auto"}) do |f| %>
    <div class="row">
      <div class="form-group col-md-4 offset-md-4">
        <%= f.label :email, for: "inputEmail" %>
        <%= f.email_field :email, autofocus: true, autocomplete:"email", class: "form-control", placeholder:"Your Email", id: "inputEmail" %>
      </div>

      <div class="form-group col-md-4 offset-md-4">
        <%= f.label :password, for: "inputPassword" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Your Password", id: "inputPassword" %>
      </div>


      <div class="form-group col-md-4 offset-md-4">
        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me,class:"form-check-input"  %>
            <%= f.label :remember_me,class:"form-check-label" %>
          </div>
        <% end %>
      </div>

      <div class="actions col-md-4 offset-md-4">
        <%= f.submit "Log in",class:'btn btn-lg btn-primary btn-block' %>
      </div>
    </div>
  <% end %>

  </br>
  <div style="text-align: center">
    <%= render "users/shared/links" %>
  </div>

</div>