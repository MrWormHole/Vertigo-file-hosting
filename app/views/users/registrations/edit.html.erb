<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div class="mt-4 alert alert-info text-center">
    <i class="fa fa-envelope"> Currently waiting confirmation for: <%= resource.unconfirmed_email %></i>
  </div>
<% end %>

<div class="text-center mt-2" style="width: 100%; max-width: 330px; padding: 15px; margin: auto">
  <h1 class="h3 mb-3 font-weight-normal text-capitalize">transfer account</h1>
</div>

<div class="form-edit-account">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="row">
      <div class="form-group col-md-4 offset-md-4">
        <%= f.label :email,for: "inputEmail"%> <em>(new email that you are transferring to)</em>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Your New Email", id: "inputEmail" %>
      </div>

      <div class="form-group col-md-4 offset-md-4">
        <%= f.label :password, for: "inputPassword" %> <em>(leave blank if you don't want to change it)</em>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"Your New Password", id: "inputPassword" %>
      </div>

      <div class="form-group col-md-4 offset-md-4">
        <%= f.label :password_confirmation, for: "inputPassword" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"Your New Password Again", id: "inputPassword" %>
      </div>

      <div class="form-group col-md-4 offset-md-4">
        <%= f.label :current_password, for: "inputCurrentPassword" %> <i>(your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder:"Your Current Password", id: "inputCurrentPassword" %>
      </div>

      <div class="actions form-group col-md-4 offset-md-4">
        <%= f.submit "Transfer", class:'btn btn-lg btn-danger btn-block' %>
      </div>
    </div>
  <% end %>
</div>

<div class="text-center mt-4" style="width: 100%; max-width: 330px; padding: 15px; margin: auto">
  <h1 class="h3 mb-3 font-weight-normal text-capitalize">delete account</h1>
</div>

<div class="row">
  <div class="col-md-4 offset-md-4">
  <p class="lead"> Deleted account's files are unrecoverable. Keep this in mind before deleting your account. If you had any complaints with our service, email us please! </p>
  <%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you really sure?" }, method: :delete, class: "btn btn-lg btn-danger btn-block" %>
  </div>
</div>


