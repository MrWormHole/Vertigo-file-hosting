<% if !@attachment.errors.empty? %>
  <div class = "alert alert-danger">
    <ul>
      <% @attachment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<br/>
<div class = "well">
  <%= form_for @attachment, :url => attachments_path, html: { multipart: true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :file %>
    <%= f.file_field :file %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>